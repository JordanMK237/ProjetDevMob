<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgrond_color">

    <!-- Bouton Menu en haut Ã  gauche -->
    <ImageButton
        android:id="@+id/btn_menu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_button_back"
        android:src="@drawable/applications_24"
        android:contentDescription="@string/menu"
        android:elevation="4dp"
        android:layout_gravity="start"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:backgroundTint="#B8C3C3"/>

    <!-- Espace en haut -->
    <View
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:contentDescription="@string/logo"
        android:src="@drawable/logo"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center_horizontal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <!-- Bouton Se Connecter -->
    <Button
        android:id="@+id/btn_se_connecter"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:minWidth="250dp"
        android:maxWidth="320dp"
        android:layout_gravity="center"
        android:text="@string/se_connecter"
        android:textSize="16sp"
        android:textColor="@color/buttonTextColor"
        android:background="@drawable/boutton_rounded"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        app:backgroundTint="@color/buttonColor"
        tools:ignore="RtlHardcoded" />

    <!-- Bouton Inscription -->
    <Button
        android:id="@+id/btn_inscription"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/boutton_rounded"
        android:gravity="center"
        android:maxWidth="320dp"
        android:minWidth="250dp"
        android:text="@string/inscription"
        android:textColor="@color/buttonTextColor"
        android:textSize="16sp"
        app:backgroundTint="@color/buttonColor"
        tools:ignore="RtlHardcoded" />

</LinearLayout>
