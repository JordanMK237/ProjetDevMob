<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- âœ… Contenu principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background_color"
        android:padding="20dp">

        <!-- Bouton menu -->
        <ImageButton
            android:id="@+id/btn_menu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/round_button_back"
            android:src="@drawable/applications_24"
            android:contentDescription="@string/menu"
            android:elevation="4dp"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            app:backgroundTint="#B8C3C3" />
    <!-- Espace en haut -->
    <View
        android:layout_width="match_parent"
        android:layout_height="100dp" />


    <!-- Ajout d'un ScrollView pour Ã©viter que le bouton soit cachÃ© -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.2"
        android:fillViewport="true">

        <!-- Rectangle contenant les inputs et le bouton -->
        <LinearLayout
            android:id="@+id/inscription_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:elevation="6dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@drawable/rectangle_background"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingTop="30dp"
            android:paddingBottom="20dp">

            <!-- Titre "mot de passe oubliÃ©" -->
            <TextView
                android:id="@+id/forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/motdepasseoubliÃ©"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#00757D"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"/>

            <!-- Champs d'inscription -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Champ PrÃ©nom -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/input_background"
                    android:padding="15dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_user"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="10dp"/>

                    <EditText
                        android:id="@+id/input_prenom"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="@string/prenom"
                        android:textColorHint="#A0A0A0"
                        android:inputType="text"
                        android:background="@null"
                        android:textSize="16sp"/>
                </LinearLayout>

                <!-- Champ Nom -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/input_background"
                    android:padding="15dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_user"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="10dp"/>

                    <EditText
                        android:id="@+id/input_nom"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="@string/nom"
                        android:textColorHint="#A0A0A0"
                        android:inputType="text"
                        android:background="@null"
                        android:textSize="16sp"/>
                </LinearLayout>

                <!-- Champ Email -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/input_background"
                    android:padding="15dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_email"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="10dp"/>

                    <EditText
                        android:id="@+id/input_email"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="@string/email"
                        android:textColorHint="#A0A0A0"
                        android:inputType="textEmailAddress"
                        android:background="@null"
                        android:textSize="16sp"/>
                </LinearLayout>

                <!-- Champ rÃ©ponse secrÃ¨te -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/input_background"
                    android:padding="15dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/les_yeux_croises_24"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="10dp"/>

                    <EditText
                        android:id="@+id/reponse_secrete"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="@string/reponse"
                        android:textColorHint="#A0A0A0"
                        android:inputType="textPassword"
                        android:background="@null"
                        android:textSize="16sp"/>
                </LinearLayout>


                <!-- Bouton S'inscrire -->
                <Button
                    android:id="@+id/btn_inscription"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:minWidth="250dp"
                    android:maxWidth="320dp"
                    android:layout_gravity="center"
                    android:text="@string/reinitialiser"
                    android:textSize="16sp"
                    android:textColor="@color/buttonTextColor"
                    android:background="@drawable/button_rounded"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    app:backgroundTint="@color/buttonColor"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
    <!-- ðŸŸ¨ Menu dÃ©roulant -->
<com.google.android.material.navigation.NavigationView
android:id="@+id/navigation_view"
android:layout_width="wrap_content"
android:layout_height="match_parent"
android:layout_gravity="start"
app:menu="@menu/nav_drawer_menu"
android:background="@drawable/background_gradient"
app:itemTextColor="@android:color/white"
app:itemIconTint="@android:color/white"/>

    </androidx.drawerlayout.widget.DrawerLayout>