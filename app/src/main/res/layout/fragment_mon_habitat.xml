<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/background_color">

        <ImageButton
            android:id="@+id/btn_menu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/round_button_back"
            android:src="@drawable/applications_24"
            android:contentDescription="@string/menu"
            android:elevation="4dp"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            app:backgroundTint="#B8C3C3" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mon_habitat"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#00757D"
            android:layout_gravity="center" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/nom_smartappart_203_n_conso_moyenne_1120w_n_appareils_4_n_tage_2"
            android:padding="12dp"
            android:background="@drawable/input_background"
            android:textColor="#000" />
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/nav_drawer_menu"
        android:background="@drawable/background_gradient"
        app:itemTextColor="@android:color/white"
        app:itemIconTint="@android:color/white" />
</androidx.drawerlayout.widget.DrawerLayout>

